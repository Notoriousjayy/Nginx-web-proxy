{
  "compilerOptions": {
        "baseUrl": ".",                 // root of your `app/`
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*":    ["layouts/*"],
      "@data/*":       ["src/data/*"],
      "@pages/*":      ["src/pages/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src", "components", "layouts", "src/custom.d.ts"]
}
